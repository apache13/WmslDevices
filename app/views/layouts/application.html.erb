<!DOCTYPE html>
<html lang="en">
	<head>
		<title>WmslDevices</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
	</head>

	<body>
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to 'WmslDevices', root_path , class: "navbar-brand" %>
				</div>
				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a href="#">Settings</a>
						</li>
						<li>
							<a href="#">Profile</a>
						</li>
						<li>
							<a href="#">Help</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-3 col-md-2 sidebar hidden-print">
					<ul class="nav nav-sidebar">
						<%= active_link_to 'Overview', {controller: "overview"} , wrap_tag: :li %>
						<%= active_link_to 'Devices', devices_path, wrap_tag: :li %>
						<%= active_link_to 'Staffs', staffs_path, wrap_tag: :li %>
						<%= active_link_to 'Enrolls', enrolls_path, wrap_tag: :li %>
					</ul>
				</div>
				<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
					<%= yield %>
				</div>
			</div>
		</div>
	</body>
</html>
