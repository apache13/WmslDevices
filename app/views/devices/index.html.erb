<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<%= render 'search' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Using</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
      	<td><%= link_to device.code , device %></td>
        <td><%= link_to device.name , device %></td>
        <td><%= device.using? ? icon("check-circle-o"):icon("circle-o") %></td>
        <td>
        	<%= link_to 'Show', device , :class => 'btn btn-default' %>
        	<%= link_to 'Edit', edit_device_path(device) , :class => 'btn btn-default' %>
        	<%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @devices, :class => 'digg_pagination' %>

<br>

<%= link_to 'New Device', new_device_path , :class => 'btn btn-primary' %>
