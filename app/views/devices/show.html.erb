<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @device.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= @device.code %>
</p>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Staff</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Duration</th>
    </tr>
  </thead>

  <tbody>
    <% @device.enrolls.sort {|x,y| x.start_date <=> y.start_date}.each_with_index do |enroll,index| %>
      <tr>
      	<td><%= index %></td>
      	<td><%= enroll.staff.name %></td>
      	<td><%= enroll.start_date %></td>
      	<td><%= enroll.end_date %></td>
      	<td><%= enroll.end_date.nil? ? distance_of_time_in_words_to_now(enroll.start_date):distance_of_time_in_words(enroll.start_date,enroll.end_date)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_device_path(@device) %> |
<%= link_to 'Back', devices_path %>
