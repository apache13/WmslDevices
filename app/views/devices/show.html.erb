<p id="notice">
	<%= notice %>
</p>
<div class="row">
	<div class="col-md-6">
		<p>
			<strong>Name:</strong>
			<%= @device.name %>
		</p>
		<p>
			<strong>Code:</strong>
			<%= @device.code %>
		</p>
	</div>
	<div class="col-md-6">
		<p>
			<strong>QR Code:</strong>
		</p>	
		<%=  image_tag "#{device_url(@device)}.svg", size: "250" %>		
		<p>
			<%= device_url(@device) %>
		</p>
	</div>
</div>

<div>
	<p>
		<strong>History:</strong>
	</p>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Staff</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Duration</th>
			</tr>
		</thead>

		<tbody>
			<% @device.enrolls.sort {|x,y| x.start_date <=> y.start_date}.each do |enroll| %>
			<tr>
				<td><%= link_to enroll.staff.display , enroll.staff %></td>
				<td><%= enroll.start_date.strftime("%F") %></td>
				<td><%= enroll.end_date.nil? ? nil:enroll.end_date.strftime("%F") %></td>
				<td><%= enroll.end_date.nil? ? distance_of_time_in_words(enroll.start_date,Date.today.end_of_day):distance_of_time_in_words(enroll.start_date,enroll.end_date) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div>
	<p>
		<strong>Time Line:</strong>
	</p>
	<%= timeline @device.timeline %>
</div>

<%= link_to 'Edit', edit_device_path(@device) , :class => 'btn btn-default' %>
<%= link_to 'Back', devices_path , :class => 'btn btn-default'%>
