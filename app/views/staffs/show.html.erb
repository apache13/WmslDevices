<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @staff.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= @staff.code %>
</p>

<p>
  <strong>Department:</strong>
  <%= @staff.department %>
</p>

<table>
  <thead>
    <tr>
      <th>Device</th>
      <th>Status</th>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
  </thead>

  <tbody>
    <% @staff.enrolls.each do |enroll| %>
      <tr>
      	<td><%= enroll.device.name %></td>
      	<td><%= enroll.status %></td>
      	<td><%= enroll.start_date %></td>
      	<td><%= enroll.end_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_staff_path(@staff) %> |
<%= link_to 'Back', staffs_path %>
