<%= form_tag(staffs_path, method: "get") do |form| %>
<div class="form-group">
	<%= label_tag(:code) %>
	<%= text_field_tag(:code,nil,:class=>'form-control') %>
</div>
<div class="form-group">
	<%= label_tag(:name) %>
	<%= text_field_tag(:name,nil, :class=>'form-control') %>
</div>
<div class="actions">
	<%= submit_tag("Search", :class=>'btn btn-default') %>
	<%= submit_tag("Clear", :class=>'btn btn-default',:type => "reset") %>
</div>
<% end %>