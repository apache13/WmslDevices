<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Id.</th>
      <th>Name</th>
      <th>Code</th>
      <th>Department</th>
      <th>Device(Enroll/Using)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
      	<td><%= staff.id %></td>
        <td><%= staff.name %></td>
        <td><%= staff.code %></td>
        <td><%= staff.department %></td>
        <td><%= staff.enrolls.size %>/<%= staff.active_enrolls.size %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

