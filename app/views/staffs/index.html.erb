<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<%= render 'search' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Department</th>
      <th>Devices</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= link_to staff.code , staff %></td>
        <td><%= link_to staff.name , staff %></td>
        <td><%= staff.department %></td>
        <td><%= link_to staff.enrolls.select {|enroll| enroll.active?}.size , staff %></td>
        <td>
        	<%= link_to 'Show', staff , :class => 'btn btn-default'%>
        	<%= link_to 'Edit', edit_staff_path(staff) , :class => 'btn btn-default'%>
        	<%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @staffs, :class => 'digg_pagination' %>
<br>

<%= link_to 'New Staff', new_staff_path , :class => 'btn btn-primary' %>
