<p id="notice"><%= notice %></p>

<h1>Enrolls</h1>

<table class="table">
  <thead>
    <tr>
      <th>Staff</th>
      <th>Device</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.staff.display %></td>
        <td><%= enroll.device.display %></td>
        <td><%= enroll.start_date %></td>
        <td><%= enroll.end_date %></td>
        <td><%= enroll.end_date.nil? ? distance_of_time_in_words(enroll.start_date,Date.today+1.day):distance_of_time_in_words(enroll.start_date,enroll.end_date+1.day) %></td>
        <td><%= link_to 'Show', enroll %></td>
        <td><%= link_to 'Edit', edit_enroll_path(enroll) %></td>
        <td><%= link_to 'Destroy', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @enrolls, :class => 'digg_pagination' %>
<br>

<%= link_to 'New Enroll', new_enroll_path %>
