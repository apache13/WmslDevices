<%= form_tag(enrolls_path, method: "get") do |form| %>
<div class="form-group">
	<%= label_tag(:staff_id) %>
	<%= select_tag(:staff_id, options_from_collection_for_select(Staff.all,:id,:display), {include_blank: true, class: "form-control"}) %>
</div>
<div class="form-group">
	<%= label_tag(:device_id) %>
	<%= select_tag(:device_id, options_from_collection_for_select(Device.all,:id,:display), {include_blank: true, class: "form-control"}) %>
</div>
<div class="actions">
	<%= submit_tag("Search", :class=>'btn btn-default') %>
	<%= submit_tag("Clear", :class=>'btn btn-default',:type => "reset") %>
</div>
<% end %>