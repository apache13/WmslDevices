<%= form_with(model: enroll, local: true) do |form| %>
  <% if enroll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(enroll.errors.count, "error") %> prohibited this enroll from being saved:</h2>

      <ul>
      <% enroll.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :staff_id %>
    <%= form.collection_select(:staff_id,Staff.all,:id,:display,prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :device_id %>
    <%= form.collection_select(:device_id,Device.all,:id,:display_avalible,prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.check_box :status, id: :enroll_status %>
  </div>
  
  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :enroll_start_date , include_blank: true %>
  </div>
  
  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :enroll_end_date  , include_blank: true%>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
